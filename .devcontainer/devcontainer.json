{
    "name": "java app remote",
    "dockerComposeFile": ["../docker/docker-compose.yml"],
    "service": "app",
    "workspaceFolder": "/workspace",
	"forwardPorts": [8080],
	"customizations": {
		"vscode": {
			"extensions": [
				"vscjava.vscode-java-pack",
				"donjayamanne.githistory",
				"eamodio.gitlens"
			]
		}
	},
	"postCreateCommand": "sudo chown -R aoba:aoba /workspace"
}